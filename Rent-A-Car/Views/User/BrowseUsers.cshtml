@model IEnumerable<Rent_A_Car.Models.User>

@{
    ViewData["Title"] = "Browse Users";
}

@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Manage Users</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>EGN</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.EGN</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
