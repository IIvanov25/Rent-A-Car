@model Rent_A_Car.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "_Layout";
}

<div class="container">
    <h2>Delete User</h2>

    <h4>Are you sure you want to delete this user?</h4>
    <dl class="row">
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">EGN</dt>
        <dd class="col-sm-10">@Model.EGN</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="BrowseUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
